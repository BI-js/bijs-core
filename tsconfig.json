{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": false,
    "incremental": true,
    "types": ["node"],
    "strict": true,
    "noEmit": false,
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  }
}
